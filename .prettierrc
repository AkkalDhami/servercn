{
  "plugins": ["prettier-plugin-tailwindcss"],
  "singleQuote": false,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/*.mdx",
      "options": {
        "parser": "mdx"
      }
    }
  ]
}
