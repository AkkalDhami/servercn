{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ServerCN Config",
  "description": "Advanced configuration schema for ServerCN projects",
  "type": "object",
  "required": ["version", "project", "stack", "meta"],
  "additionalProperties": false,

  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },

    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semver version of config"
    },

    "project": {
      "type": "object",
      "required": ["root", "srcDir", "type"],
      "additionalProperties": false,
      "properties": {
        "root": {
          "type": "string",
          "default": ".",
          "description": "Project root directory"
        },
        "srcDir": {
          "type": "string",
          "default": "src",
          "description": "Source directory"
        },
        "type": {
          "type": "string",
          "enum": ["backend", "fullstack"],
          "description": "Project type"
        }
      }
    },

    "stack": {
      "type": "object",
      "required": ["runtime", "language", "framework", "architecture"],
      "additionalProperties": false,
      "properties": {
        "runtime": {
          "type": "string",
          "enum": ["node", "deno", "bun"],
          "description": "Runtime environment"
        },
        "language": {
          "type": "string",
          "enum": ["typescript"],
          "default": "typescript",
          "description": "Programming language"
        },
        "framework": {
          "type": "string",
          "description": "Backend framework"
        },
        "architecture": {
          "type": "string",
          "description": "Project architecture"
        }
      },

      "allOf": [
        {
          "if": {
            "properties": { "runtime": { "const": "node" } }
          },
          "then": {
            "properties": {
              "framework": {
                "enum": ["express", "nest", "fastify"]
              }
            }
          }
        },
        {
          "if": {
            "properties": { "runtime": { "const": "deno" } }
          },
          "then": {
            "properties": {
              "framework": {
                "enum": ["hono"]
              }
            }
          }
        },
        {
          "if": {
            "properties": { "runtime": { "const": "bun" } }
          },
          "then": {
            "properties": {
              "framework": {
                "enum": ["hono", "express"]
              }
            }
          }
        },
        {
          "if": {
            "properties": { "framework": { "const": "nest" } }
          },
          "then": {
            "properties": {
              "architecture": {
                "enum": ["feature"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "framework": { "enum": ["express", "fastify", "hono"] }
            }
          },
          "then": {
            "properties": {
              "architecture": {
                "enum": ["mvc", "feature"]
              }
            }
          }
        }
      ]
    },

    "database": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "required": ["type", "orm"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["mongodb", "postgresql", "mysql"],
              "description": "Database type"
            },
            "orm": {
              "type": "string",
              "description": "ORM for selected database"
            }
          },

          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "mongodb" } }
              },
              "then": {
                "properties": {
                  "orm": {
                    "enum": ["mongoose"]
                  }
                }
              }
            },

            {
              "if": {
                "properties": { "type": { "const": "postgresql" } }
              },
              "then": {
                "properties": {
                  "orm": {
                    "enum": ["drizzle"]
                  }
                }
              }
            },

            {
              "if": {
                "properties": { "type": { "const": "mysql" } }
              },
              "then": {
                "properties": {
                  "orm": {
                    "enum": ["drizzle"]
                  }
                }
              }
            }
          ]
        }
      ]
    },

    "meta": {
      "type": "object",
      "required": ["createdAt", "createdBy"],
      "additionalProperties": false,
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO timestamp"
        },
        "createdBy": {
          "type": "string",
          "pattern": "^servercn@\\d+\\.\\d+\\.\\d+$",
          "description": "CLI version used to create project"
        }
      }
    }
  }
}
