            "bcryptjs": {
              "label": "BcryptJS — Pure JavaScript bcrypt implementation",
              "templates": {
                "mvc": "password-hashing/bcryptjs/mvc",
                "feature": "password-hashing/bcryptjs/feature"
              },
              "dependencies": {
                "runtime": ["bcryptjs"],
                "dev": []
              },
              "env": []
            },
            "pbkdf2": {
              "label": "PBKDF2 — Node.js crypto-based key derivation",
              "templates": {
                "mvc": "password-hashing/pbkdf2/mvc",
                "feature": "password-hashing/pbkdf2/feature"
