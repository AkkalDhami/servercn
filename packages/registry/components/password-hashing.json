            "scrypt": {
              "label": "Scrypt — Built-in Node.js crypto-based hashing",
              "templates": {
                "mvc": "password-hashing/scrypt/mvc",
                "feature": "password-hashing/scrypt/feature"
              },
              "dependencies": {
                "runtime": [],
                "dev": []
              },
              "env": []
