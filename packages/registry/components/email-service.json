{
  "$schema": "http://localhost:3000/schema/component.registry.json",
  "slug": "email-service",
  "runtimes": {
    "node": {
      "frameworks": {
        "express": {
          "prompt": "Select an email provider",
          "variants": {
            "nodemailer": {
              "label": "Nodemailer (SMTP)",
              "templates": {
                "mvc": "email-service/nodemailer/mvc",
                "feature": "email-service/nodemailer/feature"
              },
              "dependencies": {
                "runtime": ["nodemailer"],
                "dev": ["@types/nodemailer"]
              },
              "env": [
                "SMTP_HOST",
                "SMTP_PORT",
                "SMTP_USER",
                "SMTP_PASS",
                "EMAIL_FROM"
              ]
            },
            "resend": {
              "label": "Resend",
              "templates": {
                "mvc": "email-service/resend/mvc",
                "feature": "email-service/resend/feature"
              },
              "dependencies": {
                "runtime": ["resend"]
              },
              "env": ["RESEND_API_KEY", "EMAIL_FROM"]
            }
          }
        }
      }
    }
  }
}
