{
  "title": "Stateless Authentication",
  "slug": "stateless-auth",
  "type": "blueprint",
  "stacks": ["express"],
  "architectures": ["mvc", "feature"],
  "templates": {
    "express": {
      "mongodb": {
        "mongoose": {
          "mvc": "blueprints/stateless-auth/express/mongodb/mongoose/mvc",
          "feature": "blueprints/stateless-auth/express/mongodb/mongoose/feature"
        }
      },
      "mysql": {
        "drizzle": {
          "mvc": "blueprints/stateless-auth/express/mysql/drizzle/mvc",
          "feature": "blueprints/stateless-auth/express/mysql/drizzle/feature"
        }
      },
      "postgresql": {
        "drizzle": {
          "mvc": "blueprints/stateless-auth/express/postgresql/drizzle/mvc",
          "feature": "blueprints/stateless-auth/express/postgresql/drizzle/feature"
        }
      }
    }
  },
  "dependencies": {
    "common": {
      "runtime": [
        "argon2",
        "cloudinary",
        "cookie-parser",
        "cors",
        "express-rate-limit",
        "helmet",
        "jsonwebtoken",
        "multer",
        "nodemailer",
        "passport",
        "passport-github2",
        "passport-google-oauth20",
        "pino",
        "pino-pretty",
        "zod",
        "source-map-support",
        "swagger-autogen",
        "swagger-ui-express"
      ],
      "dev": [
        "@commitlint/cli",
        "@commitlint/config-conventional",
        "@types/jsonwebtoken",
        "@types/bcryptjs",
        "@types/cookie-parser",
        "@types/cors",
        "@types/helmet",
        "@types/jsonwebtoken",
        "@types/morgan",
        "@types/multer",
        "@types/node",
        "@types/nodemailer",
        "@types/passport",
        "@types/passport-github2",
        "@types/passport-google-oauth20",
        "dotenv",
        "morgan",
        "prettier",
        "tsc-alias",
        "tsx",
        "typescript",
        "@types/source-map-support",
        "@types/swagger-ui-express"
      ]
    },

    "stack:express": {
      "runtime": ["express"],
      "dev": ["@types/express"]
    },

    "db:mongodb": {
      "runtime": [""],
      "dev": [""]
    },

    "db:mysql": {
      "runtime": ["mysql2", "ejs", "node-cron", "redis"],
      "dev": ["@types/ejs"]
    },

    "db:postgresql": {
      "runtime": ["pg", "ejs", "node-cron", "redis"],
      "dev": ["@types/ejs"]
    },

    "orm:mongoose": {
      "runtime": ["mongoose"],
      "dev": [""]
    },

    "orm:drizzle": {
      "runtime": ["drizzle-orm"],
      "dev": ["drizzle-kit"]
    }
  },

  "env": [""]
}
