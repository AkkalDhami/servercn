{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "types": ["node"],
    "verbatimModuleSyntax": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "paths": {
      "*": ["./src/*"],
      "@/*": ["./*"],
      "@/src/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
